<h1><%= @artist.name %></h1>
<h3>Biography:</h3>
<p><%= @artist.bio %></p>

<h3>Genres:</h3>
<ul>
  <% @artist.genres.uniq.each do |genre|  %>
    <li><%= link_to genre.name, genre %></li>
  <% end %>
</ul>

<h3>Songs:</h3>
<ul>
  <% @artist.songs.each do |song|  %>
    <li><%= link_to song.name, song %></li>
  <% end %>
</ul>


